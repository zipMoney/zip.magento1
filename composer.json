{
    "name": "zip/magento1",
    "description": "Zip Payment Extension for Magento 1",
    "version": "2.2.0",
    "scripts": {
        "docker": "sh ./build/docker/start.sh magento",
        "deploy:post": "sh ./build/shell/post-deploy.sh",
        "deploy:package": "sh ./build/shell/deploy-package.sh",
        "test:unit": "php ./vendor/phpunit/phpunit/phpunit --bootstrap vendor/autoload.php ./test/Test.php",
        "lint": "sh ./vendor/bin/phpcs src/app/code/community/Zip/Payment src/app/design/adminhtml/default/default/template/zip/payment src/app/design/frontend/base/default/template/zip/payment",
        "lint:fix": "sh ./vendor/bin/phpcbf src/app/code/community/Zip/Payment src/app/design/adminhtml/default/default/template/zip/payment src/app/design/frontend/base/default/template/zip/payment",
        "post-install-cmd": [
            "sh ./build/shell/post-install.sh"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2.4",
        "squizlabs/php_codesniffer": "^3.4.2",
        "magento/marketplace-eqp": "dev-master"
    },
    "extra": {
        "exclude": [
            "phpcs.xml"
        ]
    },
    "repositories": [{
        "type": "vcs",
        "url": "https://github.com/magento/marketplace-eqp.git"
    }]
}
